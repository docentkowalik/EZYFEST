                        <div class="col-sm-5 form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Sign up now</h3>
                                    <p class="MGSBAR"><%= msg %></p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-pencil"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                        
                        <form role="form" action='/processRegister' name='processRegister' id='processRegister' method='POST' id="reg-form">

                        <div class="form-group">
                            <input type="text" name="first" placeholder="First name..." class="form-first-name form-control" id="first" required autofocus
                            pattern=".{2,}"   required title="2 characters minimum">
                        </div>

                        <div class="form-group">
                            <input type="text" name="last" placeholder="Last name..." class="form-first-name form-control" id="last" required autofocus
                            pattern=".{2,}"   required title="2 characters minimum">
                        </div>

                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username..." class="form-first-name form-control" id="username" required autofocus
                            pattern=".{2,}"   required title="2 characters minimum">
                        </div>

                        <div class="form-group">
                            <input type="email" name="emailAdd" placeholder="Email..." class="form-first-name form-control" id="emailAdd" required autofocus>
                        </div>

                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password..." class="form-first-name form-control" id="password" required autofocus
                            pattern=".{5,12}" required title="5 to 12 characters">
                        </div>

                        <div class="form-group">
                            <input type="text" name="title" placeholder="Festival name..." class="form-last-name form-control" id="title" required autofocus
                            pattern=".{2,}"   required title="2 characters minimum">
                        </div>

                        <div class="form-group">
                            <input type="text" name="url" placeholder="www.ezyfest.com/yourfestivalurl" class="form-email form-control" id="url" required autofocus
                            pattern=".{2,}"   required title="2 characters minimum">
                        </div>
                                    
                                    <button type="submit" class="btn reg">SIGN UP</button>
                                </form>
                            </div>
                        </div>
                    </div>
