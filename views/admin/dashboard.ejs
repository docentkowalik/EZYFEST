                        <h4><i class="fa fa-comments"></i> Blog Comment Moderation Panel</h4>
                    </div>
                    <!-- END Products List Title -->

                    <!-- Products List Content -->
                    <div class="block-content">
                        <div class="row row-items">
                            
                            <% comments.forEach( function (comment){ %>

                            <%if (comment.released == false) { %>
                                    <div class="row row-items row-comment">
                                
                                    <div class="col-sm-8 content-text">
                                        <h4 class="media-heading" id="wrap-comment"><small>Author: </small><%= comment.author %></h4>
                                        <p><small>Date: </small><%= comment.date %></p>
                                        <p id="wrap-comment"><small>Comment: </small><%= comment.comment %></p>
                                    </div>
                                    <div class="col-sm-4 push text-right">
                                                                            <h4 class="sub-header text-black"></h4>

                                        <a href="/processApproveComment?commentID=<%= comment._id %>" class="btn btn-warning"><i class="fa fa-check"></i> Approve</a>
                                        <a href="/processDeleteComment?commentID=<%= comment._id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                    </div>
                                    <hr/>
                                </div>
                            <% } %>

                                
                            <% }); %>

                                
                            </div>
