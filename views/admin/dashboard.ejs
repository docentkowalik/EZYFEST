<!-- Live Updates Block -->
                <div class="block block-themed">
                    <!-- Live Updates Title -->
                    <div class="block-title">
                        <div class="block-options">
                            <a href="javascript:void(0)" class="btn btn-option enable-tooltip" data-toggle="block-collapse" title="Toggle block's content"><i class="fa fa-arrow-up"></i></a>
                        </div>
                        <h4><i class="fa fa-wrench"></i> Logo</h4>
                    </div>
                    <!-- END Live Updates Title -->

                    <!-- Live Updates Content -->
                    <div class="block-content">
                       <form role="form" action='/processLogo' name='processLogo' id='processLogo' class="form-horizontal" method='POST'
       enctype="multipart/form-data">

                            <!-- div.row -->
                            <div class="row">
                                <!-- 1st Column -->
                                <div class="col-md-8">
                                    
                                    <div class="form-group">
                                        <label class="control-label col-md-2" for="file">Festival Logo</label>
                                            
<% festival.forEach( function (fest){ %>     

                                        <% if(fest.logo != null) { %>
                                        
                                            <div class="col-md-7">
                                                <input type="file" id="logo_image" name="logo_image" class="form-control">
                                            </div>

                                            <div class="col-md-1">

                                                     <img class="imgPlugin" src="<%= fest.logo %>" alt="logo">
                                            </div>

                                            <% } %>
                                            <% if(fest.logo == null) { %>
                                            
                                            <div class="col-md-8">
                                                <input type="file" id="logo_image" name="logo_image" class="form-control">
                                            </div>

                                            <% } %>                       
                <% }); %>
                                            
                                    </div>
                                    <div class="form-group form-actions">
                                        <div class="col-md-8 col-md-offset-2">
                                            <button type="submit" class="btn btn-success"><i class="fa fa-check" id="icon-margin"></i>Save</button>
                                    </div>
                            </div>
                                </div>
                                <!-- END 1st Column -->
                            </div>
                            <!-- END div.row -->
                        </form>
                    </div>
                    <!-- END Live Updates Content -->
