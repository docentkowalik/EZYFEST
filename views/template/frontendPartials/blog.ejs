 <section id="title" class="turquoise">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Blog</h1>
                                      
                    </div>
                    <div class="col-sm-6">
                    
                </div>
            </div>
        </div>
</section> 

    <section id="blog" class="container">
       <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-12">
            <% for(var i=0; i<blogOBJ.length; i++) {%>
                <!-- First Blog Post -->
                <div class="cont">
                    <h2>
                        <a href="#" class="blog_content"><%= blogOBJ[i].post_title %></a>
                    </h2>
                    <p class="lead by_author">
                        by <a href="index.php"><%= blogOBJ[i].post_author %></a>
                    </p>
                    <hr/>
                    <p><span class="fa fa-calendar"></span> Posted on <%= blogOBJ[i].post_date %></p>
                    <hr>
                    <p class="blog_content"><%= blogOBJ[i].post_content %></p>
                    <a class="btn btn-primary" data-toggle="modal" data-target="#<%= blogOBJ[i]._id %>">Read More <span class="fa fa-chevron-right"></span></a>
                </div>
                <hr/>
                
                <!-- Modal -->
                <div class="modal fade" id="<%= blogOBJ[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
                  <div class="container">
                    <div class="row">
                      <div class="col-sm-12">
                    
                    
                     <!-- Page Content -->
                        <div class="container  modal_color_set">

                            <div class="row">            
                                                           

                                <!-- Blog Post Content Column -->
                                <div class="col-lg-12">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>

                                    <!-- Blog Post -->

                                    <!-- Title -->
                                    <h1><%= blogOBJ[i].post_title %></h1>

                                    <!-- Author -->
                                    <p class="lead">
                                        by <a href="#"><%= blogOBJ[i].post_author %></a>
                                    </p>

                                    <hr>

                                    <!-- Date/Time -->
                                        <p><span class="fa fa-calendar"></span> Posted on <%= blogOBJ[i].post_date %></p>
                                        <h6><span class="fa fa-tags"><span id="tag"><%= blogOBJ[i].post_tags %></span></h6>

                                    <hr>

                                    <!-- Post Content -->
                                    <p class="blog_content_full"><%= blogOBJ[i].post_content %></p>
                                    <hr>

                                    <!-- Blog Comments -->

                                    <!-- Comments Form -->
                                    <div class="well style_well">
                                        <h4>Leave a Comment:</h4>
                                        <form role="form" action='/processComment' name='processComment' id='processComment' method='POST'>
                                            <div class="form-group">
                                                <textarea class="form-control" id="comment" name="comment" rows="3" placeholder="Comment" maxlength="255"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="author" name="author" placeholder="Your Name" maxlength="60"/>
                                                <input type="hidden" class="form-control" id="idPost" name="idPost" value="<%= blogOBJ[i]._id %>"/>

                                            </div>
                                            <button class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>

                                    <hr>

                                    <!-- Posted Comments -->
                           

                            <% comments.forEach( function (comment){ %>

                                <%if (comment.blog_fest_id.toString() == blogOBJ[i]._id.toString() && comment.released == true) { %>

                                        <div class="media">
                                            <div class="media-body">
                                                <h4 class="media-heading"><%= comment.author %>
                                                    <small><%= comment.date %></small>
                                                </h4><span class="wrapit"><%= comment.comment %></span>
                                            </div>
                                        </div>
                                        <br/>
                                        <hr/>

                                <% } %>                                
                            
                           <% }); %>

            
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.container -->
                      </div>
                    </div>
                  </div>
                </div>

            <% } %>
            </div>
        </div>
        <!-- /.row -->
    </section><!--/#blog--> 




